    // Choose the order of the modules
    "modules-left": [
        "custom/menu",
        "clock",
        //"custom/myterm",
        "custom/mynote",
        "custom/mailer",
        "custom/software",
        "custom/fileman",
        "custom/vscode",
        "custom/firefox",
        "custom/chrome"
    ],
    "modules-center": [
        "hyprland/workspaces", 
        "mpd"
    ],
    "modules-right": [
        // "idle_inhibitor",
        // "pulseaudio",
        "power-profiles-daemon",
        "cpu",
        "memory",
        "temperature",
        // "backlight",
        // "keyboard-state",
        // "sway/language",
        // "battery",
        // "battery#bat2",
        "tray",
        "network",
        "custom/audio",
        "custom/locks",
        "custom/power"
    ],
    // Modules configuration
